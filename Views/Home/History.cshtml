@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

@model HostAccessibilityCheckingSite.Data.Models.History;

<button class="btn btn-dark p-2 m-2 position-fixed" onclick="history.back()">Back</button>
<div class="container-fluid text-white p-3 bg-primary" >
    <h1 class="text-center">Viewing history for @Model.Site.Host (interval is @Model.Site.Interval)</h1>
</div>

<div class="container">
    @foreach(var item in Model.Notes)
    {
        <div class="container bg-dark text-white p-3 my-3">
            <h3>Time: @item.Time</h3>
            <h3>Status: @item.Status</h3>
        </div>
    }
</div>

<script src="/js/admin.js"></script>